{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@debug-pi/shared": ["packages/shared/src/index.ts"],
      "@debug-pi/shared/*": ["packages/shared/src/*"]
    },
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "jsx": "react-jsx"
  }
}
