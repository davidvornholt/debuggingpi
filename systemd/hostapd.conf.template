# hostapd configuration for Debug Pi
# This is a template that will be populated by the daemon

interface=wlan0
driver=nl80211
ssid={{SSID}}
hw_mode=g
channel={{CHANNEL}}
ieee80211n=1
wmm_enabled=1
macaddr_acl=0
auth_algs=1
ignore_broadcast_ssid={{HIDDEN}}
wpa=2
wpa_passphrase={{PASSPHRASE}}
wpa_key_mgmt=WPA-PSK
wpa_pairwise=TKIP
rsn_pairwise=CCMP
country_code={{REGULATORY_DOMAIN}}
