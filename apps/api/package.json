		"lint:fix": "biome check --error-on-warnings . --write"
	},
	"dependencies": {
		"@debuggingpi/shared": "workspace:*",
		"hono": "^4.7.0",
		"zod": "^3.24.0"
	},
	"devDependencies": {
		"@types/bun": "^1.2.0",
		"typescript": "^5.7.0"
	}
}
