{
	"name": "@debuggingpi/api",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun run --hot src/index.ts",
		"build": "bun build src/index.ts --outdir dist --target bun --minify",
		"start": "bun run dist/index.js",
		"check-types": "tsc --noEmit",
